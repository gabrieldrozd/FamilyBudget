{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@assets/*": [
                "./src/_assets/*"
            ],
            "@styles/*": [
                "./src/_styles/*"
            ],
            "@base/*": [
                "./src/_styles/base.scss"
            ],
            "@colors/*": [
                "./src/_styles/colors.scss"
            ],
            "@app/*": [
                "./src/app/*"
            ],
            "@core/*": [
                "./src/core/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ],
            "@store/*": [
                "./src/store/*"
            ],
        }
    },
    "include": [
        "src",
        "src/_assets",
        "src/_styles",
        "src/app",
        "src/core",
        "src/shared",
        "src/store"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
